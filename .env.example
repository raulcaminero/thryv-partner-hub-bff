# Environment variables - Copy to .env.local for development
NODE_ENV=development
PORT=3000

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=your-api-identifier
AUTH0_JWKS_URI=https://your-auth0-domain.auth0.com/.well-known/jwks.json
JWT_ISSUER=https://your-auth0-domain.auth0.com/
JWT_AUDIENCE=your-api-identifier

# Datadog Configuration
DD_API_KEY=your-datadog-api-key
DD_SERVICE=thryv-partner-hub-bff
DD_ENV=development
DD_VERSION=1.0.0
DD_TRACE_ENABLED=true

# CloudWatch Configuration
AWS_CLOUDWATCH_LOG_GROUP=/aws/lambda/thryv-partner-hub-bff
AWS_CLOUDWATCH_LOG_STREAM=development

# Security & Rate Limiting
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=debug

# Optional: Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# Serverless Configuration
SERVERLESS_STAGE=dev
